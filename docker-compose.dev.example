version: '3.7'

services:
  app:
    container_name: star-wars-api
    command: [ "node", "server.js" ]
    image: star-wars-api
    build:
      context: .
      target: development
    ports:
      - "5000:5000"
    env_file:
      - fileName: .env
        path: /
    environment:
      NODE_ENV: development
